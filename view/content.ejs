<%- include('./layout/header.ejs'); %>

      <link rel="stylesheet" href="../css/read.css">
      <div class="all-info">
        <div class="flex-container">
          <div class="flax-main">
            <main class="main-content">
              <section class="news-posts">
      
             <article class="news-post">
              <div class="one-news-blog">
                <h2 class="news-post-title"><%= content.title %></h2>
                  <div class="footer">
                     
                      <div class="name-author">Мэдээ оруулсан:<%= content.user %> </div>
                    </div>
                    <time class="news-time" datetime="2019-06-10"><%= content.date %></time>
                    <div class="prewiew-text">1. <br> <%= content.description %>
                    </div>
                    <div class="left-photo "> <img src="../images/newsPhoto/<%= content.blogPhoto %>"
                      width="800px"
                      height="500px"> </div>
                   </div>
                </article>

         </section>
            </main>
          </div>
      
          <div class="flex-aside">
            <aside class="right-side-block">
              <div class="different-sections">
      
                <div class="different-section">
                  <h3 class="right-news-titles">Шинэ Мэдээ</h3>
                  <div class="right-side-content">
                    <section class="right-last-news">
      
                  
                      <article class="right-news">
                        <div class="one-right-photo">
                          <img src="../images/newsPhoto/<%= content.blogPhoto %>"
                          width="60px"
                          height="60px"> 
                        </div>
                        <div class="side-info">
                          <time class="news-time" ><%= content.date %></time>
                          <a href="#0">
                            <h3 class="right-news-title"><%= content.title %></h3>
                          </a>
                        </div>
      
                      </article>
      
                      <div class="form-row-glass">
                        <input type="text" class="field" placeholder="Хайлт...">
                        <div class="img-find"></div>
                      </div>
      
                    </section>
                  </div>
      
                </div>
      
                <div class="different-section">
                  <h3 class="right-news-titles">Сэтгэгдэл</h3>
                  <div class="right-side-content">
                    <section class="email-address">
                      <form class="form-row">
                        <label class="form-group">
                          <input type="email" class="field" placeholder="Email-аdress" required>
                        </label>
                        <div class="form-row-group">
                          <button class="button">Илгээх</button>
                        </div>
                      </form>
                    </section>
                  </div>
      
                </div>
      
                <div class="different-section">
                  <h3 class="right-news-titles">Ангилал</h3>
                  <div class="right-side-content">
                    <section class="items-tegs">
                      <ul class="all-tegs">
                        <li><a href="#0" class="teg">Загвар</a></li>
                        <li><a href="#0" class="teg">Хөгжим</a></li>
                        <li><a href="#0" class="teg">Хэв маяг</a></li>
                        <li><a href="#0" class="teg">Урлаг</a></li>
                        <li><a href="#0" class="teg">Дотоод засал</a></li>
                        <li><a href="#0" class="teg">Аялал</a></li>
                        <li><a href="#0" class="teg">Хоол</a></li>
                        <li><a href="#0" class="teg">Эрүүл мэнд</a></li>
                      </ul>
                    </section>
                  </div>
                </div>
      
                <div class="different-section">
                  <h3 class="right-news-titles">Ангилал</h3>
                  <div class="right-side-content">
                    <section class="all-items-list">
                      <ul class="items-list">
                        <li><a href="#0" class="list-item">Гоёл<span class="number">12</span></a></li>
                        <li><a href="#0" class="list-item">Эрүүл мэнд<span class="number">4</span></a></li>
                        <li><a href="#0" class="list-item">Амьдралын хэв маяг<span class="number">145</span></a></li>
                        <li><a href="#0" class="list-item">Хөгжим<span class="number">28</span></a></li>
                        <li><a href="#0" class="list-item">Спорт<span class="number">62</span></a></li>
                        <li><a href="#0" class="list-item">Йог<span class="number">8</span></a></li>
                      </ul>
                    </section>
                  </div>
                </div>
              </div>
            </aside>
          </div>
        </div>
        <%- include('./layout/footer.ejs'); %>