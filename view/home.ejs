<%- include('./layout/header.ejs'); %>
 <div class="all-info">
        <div class="flex-container">
          <div class="flax-main">
            <main class="main-content">
              <section class="news-posts">
                <% for(var i = users.length-1; i >=0; i--) { %>
                <article class="news-post">
                  <img src="../images/newsPhoto/<%=users[i].blogPhoto %>" class="left-photo" >
                  <div class="one-news-blog">
                    <div class="item-news">
                      <ul>
                        <li><a href="#0" class="item"><%= users[i].category %></a></li>
                     
                      </ul>
                    </div>
                    <a href="content/<%=users[i].id %>" >
                      <h2 class="news-post-title"> <%= users[i].title %></h2>
                    </a>
                    
                    <div class="footer">
                      
                      
                      <div class="name-author">Admin: <%= users[i].user %></div>
                    </div>
                    <time class="news-time"><%= users[i].date %></time> 
                    <div class="text"> <br> Read more  </div>
                  </div>
                </article>
                <%  } %>
            
              </section>
            </main>
          </div>
      
          <div class="flex-aside">
            <aside class="right-side-block">
              <div class="different-sections">
      
                <div class="different-section">
                  <h3 class="right-news-titles">New Content</h3>
                  <div class="right-side-content">
                    <section class="right-last-news">
                      <% for(var i=0; i< users.length; i++) { %>
                      <article class="right-news">
                        <div class="one-right-photo">
                          <img src="../images/newsPhoto/<%= users[i].blogPhoto %>" 
                          width="60px"
                          height="60px"
                          />
                        </div>
                        <div class="side-info">
                         
                          <a href="content/<%=users[i].id %>">
                            <h3 class="right-news-title"><%= users[i].title %> </h3>
                          </a>
                          <div class="name">Admin: <%= users[i].user %></div>
                        </div>
      
                      </article>
                      
                      <% } %> 
                     
                      <div class="form-row-glass">
                        <input type="text" class="field" placeholder="Search...">
                        
                        <div class="img-find"></div>
                      </div>
                   
      
                    </section>
                  </div>
      
                </div>
      
             
                
            <div class="different-section">
                  <h3 class="right-news-titles">Category</h3>
                  <div class="right-side-content">
                    <section class="all-items-list">
                      <ul class="items-list">
                        <% for(var i=0; i< category.length; i++) { %>
                          <li><a href="category/<%=category[i].category %>" class="list-item"><%=category[i].category %></a></li>
                       
                          <% } %> 
                      </ul>
                    </section>
                  </div>
                </div>
                <div class="different-section">
                  <h3 class="right-news-titles">Comment</h3>
                  <div class="right-side-content">
                    <section class="email-address">
                      <form class="form-row">
                        <label class="form-group">
                          <input type="email" class="field" placeholder="Email-Ð°dress" required>
                        </label>
                        <div class="form-row-group">
                          <button class="button">Send</button>
                        </div>
                      </form>
                    </section>
                  </div>
      
                </div>
              </div>
            </aside>
          </div>
        </div>
        <%- include('./layout/footer.ejs'); %>